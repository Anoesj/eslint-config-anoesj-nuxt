{
  "npm.packageManager": "pnpm",
  "editor.formatOnSave": false,
  "editor.codeActionsOnSave": {
    // "source.fixAll": "never", // optional
    "source.fixAll.eslint": "explicit"
  },
  "eslint.useFlatConfig": true,
  "eslint.options": {
    "flags": ["unstable_ts_config"],
  },
  "eslint.validate": [
    "javascript",
    "typescript",
  ],
}
